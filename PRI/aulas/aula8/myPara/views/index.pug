extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        h3 MyPara (nodeJS)
      .w3-container
        form.w3-container(id="myParaForm")
          fieldset
            legend Novo Parágrafo
            textarea.w3-input.w3-border.w3-light-grey(id="texto" rows="3" cols="80")
            button.w3-button.w3-round-large.w3-teal(id="adicionar") Adicionar parágrafo
        .w3-container
          ol(id="paras")
      footer.w3-container.w3-teal
        address Gerado por AjaxApp